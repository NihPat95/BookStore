<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost/bookstore</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.connection.password">nihar1995</property>
  <property name="hibernate.connection.pool_size">5</property>
  <property name="show_sql">true</property>
  <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <!-- Mapping files -->
  <mapping resource="vo/UserRecords.hbm.xml"/>
  <mapping resource="vo/BookRecords.hbm.xml"/>
  <mapping resource="vo/CartRecord.hbm.xml"/>
  <mapping resource="vo/ReviewRecords.hbm.xml"/>
</session-factory>
</hibernate-configuration>